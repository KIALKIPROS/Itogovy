<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WinnerFragment">

    <TextView
        android:id="@+id/winersText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/winners"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/winer_Recycler_View"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/goto_site_buttion"
        app:layout_constraintTop_toBottomOf="@+id/winersText"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/goto_site_buttion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_odin_site"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>